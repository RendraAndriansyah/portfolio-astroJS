---
import MainLayout from "../layouts/MainLayout.astro";
import backgroundPrimary from "../assets/images/bg-1.png";
import backgroundSecondary from "../assets/images/bg-2.png";
---

<MainLayout
	title="Rendra | Portfolio"
	seoDesc="Frontend Developer who expertise in Astro, React, NextJs, VueJS, and NuxtJs"
>
	<main class="overflow-hidden">
		<div class="w-8/12 md:w-6/12 mx-auto drop-shadow-[0px_35px_35px_rgba(39,245,231,0.8)]">
			<h1 class="text-3xl md:text-4xl font-medium text-center pb-80 md:pb-0 md:mb-28 md:pr-20">
				Hello 👋🏼,I am <span class="text-amber-500 font-semibold">Rendra</span> Andriansyah

				<div class="text-base text-start w-10/12 mx-auto pt-4">
					<span id="element"></span>
				</div>
			</h1>
		</div>
		<img
			src={backgroundPrimary}
			width="600"
			class="absolute overflow-hidden bottom-10 md:-bottom-0 right-0 -z-10 min-w-sm lg:max-w-xl"
		/><img
			src={backgroundSecondary}
			class="absolute overflow-hidden bottom-10 md:-bottom-0 left-0 -z-10 hidden md:block md:w-3/12"
		/>

		<div id="sentence-typed" class="hidden">
			<p>
				I am a <strong> <span class="text-sky-300/90">Frontend</span> Developer</strong>
			</p>
			<p>I <em>work</em> with ReactJS, NextJS, Vue, & Astro.</p>
		</div>
	</main>
</MainLayout>

<script>
	import Typed from "typed.js";
	var typed = new Typed("#element", {
		stringsElement: "#sentence-typed",
		typeSpeed: 40,
		loop: true,
	});
</script>
